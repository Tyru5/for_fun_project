<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.merrick.tmalmstrom.rocketleagueboosttimer.MainActivity"
    android:background="@drawable/rll"
    android:backgroundTint="@color/accent_material_dark"
    android:backgroundTintMode="multiply"
    android:clickable="false"
    android:onClick="gameCaption">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boostTL"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"

        android:src="@drawable/boost_up"
        android:focusable="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boostML"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/boostTL"
        android:layout_alignStart="@+id/boostTL"
        android:src="@drawable/boost_up" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boostBL"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/boostML"
        android:layout_alignStart="@+id/boostML"
        android:layout_marginBottom="29dp"
        android:src="@drawable/boost_up" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boostTR"
        android:layout_alignBottom="@+id/boostTL"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_alignTop="@+id/boostTL"
        android:src="@drawable/boost_up" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boostMR"
        android:layout_alignBottom="@+id/boostML"
        android:layout_alignRight="@+id/boostTR"
        android:layout_alignEnd="@+id/boostTR"
        android:src="@drawable/boost_up" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boostBR"
        android:layout_alignBottom="@+id/boostBL"
        android:layout_alignRight="@+id/boostMR"
        android:layout_alignEnd="@+id/boostMR"
        android:src="@drawable/boost_up" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/timerTL"
        android:layout_below="@+id/boostTL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/timerTR"
        android:layout_below="@+id/boostTR"
        android:layout_alignLeft="@+id/boostTR"
        android:layout_alignStart="@+id/boostTR" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/timerML"
        android:layout_below="@+id/boostML"
        android:layout_alignRight="@+id/boostML"
        android:layout_alignEnd="@+id/boostML" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/timerMR"
        android:layout_below="@+id/boostMR"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/timerBL"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/boostBL"
        android:layout_alignStart="@+id/boostBL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/timerBR"
        android:layout_below="@+id/boostBR"
        android:layout_alignRight="@+id/timerTR"
        android:layout_alignEnd="@+id/timerTR" />

</RelativeLayout>
